<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="Theme">
        <attr name="helpIcon" format="reference" />
        <attr name="nextItemIcon" format="reference" />
        <attr name="prevItemIcon" format="reference" />
        <attr name="note_bg" format="reference" />
        <attr name="one_drop_bg" format="reference" />
        <attr name="two_drops_bg" format="reference" />
        <attr name="three_drops_bg" format="reference" />
        <attr name="sex_bg" format="reference" />
        <attr name="protected_sex_bg" format="reference" />
        <attr name="unprotected_sex_bg" format="reference" />
        <attr name="took_pill_bg" format="reference" />
        <attr name="sex" format="reference" />
        <attr name="protected_sex" format="reference" />
        <attr name="unprotected_sex" format="reference" />
    </declare-styleable>

    <style name="AppBaseTheme" parent="android:Theme">

        <!-- item name="numberPickerStyle">@style/Widget.NumberPicker</item -->
        <item name="helpIcon">@drawable/help_light</item>
    </style>

    <style name="AppBaseThemeLight" parent="android:Theme.Light">

        <!-- item name="numberPickerStyle">@style/Widget.NumberPicker</item -->
        <item name="helpIcon">@drawable/help_light</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="nextItemIcon">@drawable/next_item_dark</item>
        <item name="prevItemIcon">@drawable/previous_item_dark</item>
        <item name="note_bg">@drawable/note_bg_src_dark</item>
        <item name="one_drop_bg">@drawable/one_drop_bg_src_dark</item>
        <item name="two_drops_bg">@drawable/two_drops_bg_src_dark</item>
        <item name="three_drops_bg">@drawable/three_drops_bg_src_dark</item>
        <item name="sex_bg">@drawable/sex_bg_src_dark</item>
        <item name="protected_sex_bg">@drawable/protected_sex_bg_src_dark</item>
        <item name="unprotected_sex_bg">@drawable/unprotected_sex_bg_src_dark</item>
        <item name="took_pill_bg">@drawable/pill_bg_src_dark</item>
        <item name="sex">@drawable/sex_dark</item>
        <item name="protected_sex">@drawable/protected_sex_dark</item>
        <item name="unprotected_sex">@drawable/unprotected_sex_dark</item>
    </style>

    <style name="AppThemeLight" parent="AppBaseThemeLight">
        <item name="nextItemIcon">@drawable/next_item_light</item>
        <item name="prevItemIcon">@drawable/previous_item_light</item>
        <item name="note_bg">@drawable/note_bg_src_light</item>
        <item name="one_drop_bg">@drawable/one_drop_bg_src_light</item>
        <item name="two_drops_bg">@drawable/two_drops_bg_src_light</item>
        <item name="three_drops_bg">@drawable/three_drops_bg_src_light</item>
        <item name="sex_bg">@drawable/sex_bg_src_light</item>
        <item name="protected_sex_bg">@drawable/protected_sex_bg_src_light</item>
        <item name="unprotected_sex_bg">@drawable/unprotected_sex_bg_src_light</item>
        <item name="took_pill_bg">@drawable/pill_bg_src_light</item>
        <item name="sex">@drawable/sex_light</item>
        <item name="protected_sex">@drawable/protected_sex_light</item>
        <item name="unprotected_sex">@drawable/unprotected_sex_light</item>
    </style>

    <declare-styleable name="Theme.Dialog">
        <attr name="spinnerItemTextColor" format="color|reference" />
        <attr name="textViewTextColor" format="color|reference" />
        <attr name="editableTextViewTextColor" format="color|reference" />
    </declare-styleable>

    <style name="DialogBaseTheme" parent="android:Theme.Dialog">

        <!-- item name="numberPickerStyle">@style/Widget.NumberPicker</item -->
        <item name="spinnerItemTextColor">@android:color/black</item>
        <item name="textViewTextColor">@android:color/white</item>
        <item name="editableTextViewTextColor">@android:color/black</item>
    </style>

    <style name="DialogBaseThemeLight" parent="android:Theme.Dialog">

        <!-- item name="numberPickerStyle">@style/Widget.NumberPicker</item -->
        <item name="spinnerItemTextColor">@android:color/black</item>
        <item name="textViewTextColor">@android:color/white</item>
        <item name="editableTextViewTextColor">@android:color/black</item>
    </style>

    <style name="DialogTheme" parent="DialogBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="nextItemIcon">@drawable/next_item_dark</item>
        <item name="prevItemIcon">@drawable/previous_item_dark</item>
    </style>

    <style name="DialogThemeLight" parent="DialogBaseThemeLight">
        <item name="android:windowNoTitle">true</item>
        <item name="nextItemIcon">@drawable/next_item_light</item>
        <item name="prevItemIcon">@drawable/previous_item_light</item>
    </style>

</resources>